{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["jest", "react", "react-native"],
    "strict": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "redux/*": ["src/redux/*"],
      "screens/*": ["src/screens/*"],
      "components/*": ["src/components/*"],
      "src/*": ["src/*"],
      "*": ["*", "src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}